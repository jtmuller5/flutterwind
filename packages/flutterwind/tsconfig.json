{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "jsx": "react",
  "module": "ESNext",
  "declaration": true,
  "declarationDir": "types",
  "sourceMap": true,
  "outDir": "dist",
  "moduleResolution": "node",
  "allowSyntheticDefaultImports": true,
  "emitDeclarationOnly": true
}
